<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background = "@drawable/fundal_mental_health"
    tools:context = ".appactivities.mentalhealthinfo.MentalHealthInfoActivity"
    android:fitsSystemWindows="true">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/idNavView4"
        app:menu="@menu/dashboard_menu_4"
        android:background="@drawable/fundal_mental_health"
        android:layout_gravity="start"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fundal_mental_health">

        <ImageView
            android:id="@+id/img_navMH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_menu_24_white"
            android:padding="16dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id = "@+id/txtDiscover"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_margin = "15dp"
            android:layout_below="@id/img_navMH"
            android:text = "Knowledge is power. Inform yourself about potential
                      mental health conditions better!"
            android:textColor = "@color/white"
            android:textSize = "28sp"
            android:textAlignment = "center"/>

        <GridLayout
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:layout_below = "@id/txtDiscover"
            android:layout_alignParentBottom = "true"
            android:rowCount = "5"
            android:columnCount = "2">

            <androidx.cardview.widget.CardView
                android:id = "@+id/cardViewPTSD"
                android:layout_width = "100dp"
                android:layout_height = "wrap_content"
                app:cardCornerRadius = "15dp"
                app:cardElevation = "12dp"
                android:layout_columnWeight = "1"
                android:layout_row = "0"
                android:layout_column = "0"
                android:backgroundTint="@color/burlywood">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:layout_margin = "12dp"
                    android:orientation = "vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "PTSD"
                        android:textSize = "18sp"
                        android:textStyle = "bold"
                        android:textColor = "@color/white"
                        android:layout_gravity = "center_horizontal"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id = "@+id/cardViewDepression"
                android:layout_width = "100dp"
                android:layout_height = "wrap_content"
                app:cardCornerRadius = "15dp"
                app:cardElevation = "12dp"
                android:layout_columnWeight = "1"
                android:layout_row = "0"
                android:layout_column = "1"
                android:backgroundTint="@color/burlywood">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:layout_margin = "12dp"
                    android:orientation = "vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "Depression"
                        android:textSize = "18sp"
                        android:textStyle = "bold"
                        android:textColor = "@color/white"
                        android:layout_gravity = "center_horizontal"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id = "@+id/cardViewAnxiety"
                android:layout_width = "100dp"
                android:layout_height = "wrap_content"
                app:cardCornerRadius = "15dp"
                app:cardElevation = "12dp"
                android:layout_columnWeight = "1"
                android:layout_row = "1"
                android:layout_column = "0"
                android:backgroundTint="@color/burlywood">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:layout_margin = "12dp"
                    android:orientation = "vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "Anxiety disorder"
                        android:textSize = "18sp"
                        android:textStyle = "bold"
                        android:textColor = "@color/white"
                        android:layout_gravity = "center_horizontal"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id = "@+id/cardViewADHD"
                android:layout_width = "100dp"
                android:layout_height = "wrap_content"
                app:cardCornerRadius = "15dp"
                app:cardElevation = "12dp"
                android:layout_columnWeight = "1"
                android:layout_row = "1"
                android:layout_column = "1"
                android:backgroundTint="@color/burlywood">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:layout_margin = "12dp"
                    android:orientation = "vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "ADHD"
                        android:textSize = "18sp"
                        android:textStyle = "bold"
                        android:textColor = "@color/white"
                        android:layout_gravity = "center_horizontal"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id = "@+id/cardViewOCD"
                android:layout_width = "100dp"
                android:layout_height = "wrap_content"
                app:cardCornerRadius = "15dp"
                app:cardElevation = "12dp"
                android:layout_columnWeight = "1"
                android:layout_row = "2"
                android:layout_column = "0"
                android:backgroundTint="@color/burlywood">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:layout_margin = "12dp"
                    android:orientation = "vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "OCD"
                        android:textSize = "18sp"
                        android:textStyle = "bold"
                        android:textColor = "@color/white"
                        android:layout_gravity = "center_horizontal"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id = "@+id/cardViewBipolarDisorder"
                android:layout_width = "100dp"
                android:layout_height = "wrap_content"
                app:cardCornerRadius = "15dp"
                app:cardElevation = "12dp"
                android:layout_columnWeight = "1"
                android:layout_row = "2"
                android:layout_column = "1"
                android:backgroundTint="@color/burlywood">

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "match_parent"
                android:layout_margin = "12dp"
                android:orientation = "vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Bipolar disorder"
                    android:textSize = "18sp"
                    android:textStyle = "bold"
                    android:textColor = "@color/white"
                    android:layout_gravity = "center_horizontal"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id = "@+id/cardViewInsomnia"
                android:layout_width = "100dp"
                android:layout_height = "wrap_content"
                app:cardCornerRadius = "15dp"
                app:cardElevation = "12dp"
                android:layout_columnWeight = "1"
                android:layout_row = "3"
                android:layout_column = "0"
                android:backgroundTint="@color/burlywood">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:layout_margin = "12dp"
                    android:orientation = "vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "Insomnia"
                        android:textSize = "18sp"
                        android:textStyle = "bold"
                        android:textColor = "@color/white"
                        android:layout_gravity = "center_horizontal"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id = "@+id/cardViewSelfEsteem"
                android:layout_width = "100dp"
                android:layout_height = "wrap_content"
                app:cardCornerRadius = "15dp"
                app:cardElevation = "12dp"
                android:layout_columnWeight = "1"
                android:layout_row = "3"
                android:layout_column = "1"
                android:backgroundTint="@color/burlywood">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:layout_margin = "12dp"
                    android:orientation = "vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "Self esteem issues"
                        android:textSize = "18sp"
                        android:textStyle = "bold"
                        android:textColor = "@color/white"
                        android:layout_gravity = "center_horizontal"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id = "@+id/cardViewSuicidalToughts"
                android:layout_width = "100dp"
                android:layout_height = "wrap_content"
                app:cardCornerRadius = "15dp"
                app:cardElevation = "12dp"
                android:layout_columnWeight = "1"
                android:layout_row = "4"
                android:layout_column = "0"
                android:backgroundTint="@color/burlywood">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:layout_margin = "12dp"
                    android:orientation = "vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "Suicidal toughts"
                        android:textSize = "18sp"
                        android:textStyle = "bold"
                        android:textColor = "@color/white"
                        android:layout_gravity = "center_horizontal"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id = "@+id/cardViewFocusAndDiscipline"
                android:layout_width = "100dp"
                android:layout_height = "wrap_content"
                app:cardCornerRadius = "15dp"
                app:cardElevation = "12dp"
                android:layout_columnWeight = "1"
                android:layout_row = "4"
                android:layout_column = "1"
                android:backgroundTint="@color/burlywood">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:layout_margin = "12dp"
                    android:orientation = "vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "Focus and Discipline"
                        android:textSize = "18sp"
                        android:textStyle = "bold"
                        android:textColor = "@color/white"
                        android:layout_gravity = "center_horizontal"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>