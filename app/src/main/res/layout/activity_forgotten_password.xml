<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:background = "@drawable/fundal_login_gradient"
    tools:context = ".signin.ForgottenPasswordActivity">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Reset your password"
        android:textColor = "@color/white"
        android:textSize = "50dp"
        android:gravity = "center_horizontal"
        android:layout_margin = "25dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewForgottenPassword"
        android:layout_below="@id/txtTitle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id = "@+id/editTextUsername"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_marginStart = "20dp"
                android:layout_marginTop = "30dp"
                android:layout_marginEnd = "20dp"
                android:layout_marginBottom = "15dp"
                android:background = "#30ffffff"
                android:hint = "Enter your username"
                android:textColorHint = "@color/white"
                android:textColor = "@color/white"
                android:textSize = "30dp"
                android:drawableLeft = "@drawable/baseline_person_30"
                android:drawablePadding = "20dp"/>

            <EditText
                android:id = "@+id/editTextNewPassword"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_below = "@id/editTextUsername"
                android:layout_marginStart = "20dp"
                android:layout_marginTop = "30dp"
                android:layout_marginEnd = "20dp"
                android:layout_marginBottom = "15dp"
                android:background = "#30ffffff"
                android:hint = "Enter a new password"
                android:textColorHint = "@color/white"
                android:textColor = "@color/white"
                android:textSize = "30dp"
                android:drawableLeft = "@drawable/baseline_shield_30"
                android:drawablePadding = "20dp"/>

            <CheckBox
                android:id = "@+id/cbShowNewPassword"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_below = "@id/editTextNewPassword"
                android:text = "Show the password"
                android:textSize = "20sp"
                android:textColor = "@color/white"
                android:layout_marginTop = "0dp"
                android:layout_marginLeft = "20dp"
                android:layout_marginRight = "20dp"
                android:buttonTint = "@color/design_default_color_primary"/>

            <EditText
                android:id = "@+id/editTextConfirmNewPassword"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_below = "@id/cbShowNewPassword"
                android:layout_marginStart = "20dp"
                android:layout_marginTop = "30dp"
                android:layout_marginEnd = "20dp"
                android:layout_marginBottom = "15dp"
                android:background = "#30ffffff"
                android:hint = "Confirm the new password"
                android:textColorHint = "@color/white"
                android:textColor = "@color/white"
                android:textSize = "30dp"
                android:drawableLeft = "@drawable/baseline_shield_30"
                android:drawablePadding = "20dp"/>

            <CheckBox
                android:id = "@+id/cbShowConfirmPassword"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_below = "@id/editTextConfirmNewPassword"
                android:text = "Show the confirmed password"
                android:textSize = "20sp"
                android:textColor = "@color/white"
                android:layout_marginTop = "0dp"
                android:layout_marginLeft = "20dp"
                android:layout_marginRight = "20dp"
                android:buttonTint = "@color/design_default_color_primary"/>

            <com.google.android.material.button.MaterialButton
                android:id = "@+id/btnReset"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_below = "@id/cbShowConfirmPassword"
                android:backgroundTint = "@color/design_default_color_primary"
                android:text = "Reset the password"
                android:textColor = "@color/white"
                android:textSize = "30dp"
                android:layout_marginTop = "30dp"
                android:layout_marginLeft = "80dp"
                android:layout_marginRight = "80dp"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>